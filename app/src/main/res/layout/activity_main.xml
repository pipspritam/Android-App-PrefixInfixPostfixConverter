<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_2"
    android:padding="5dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="25sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/prefix_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prefix_to_other_button"
                android:textColor="#FFFFFF"
                android:padding="20dp"
                android:textStyle="bold"
                android:background="@drawable/button_1"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/infix_button"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:text="@string/infix_to_other_button"
                android:background="@drawable/button_1"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/postfix_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="@string/postfix_to_other_button"
                android:background="@drawable/button_1"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="@string/copy_right"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</LinearLayout>