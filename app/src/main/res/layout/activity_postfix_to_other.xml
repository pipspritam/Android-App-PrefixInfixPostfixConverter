<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_2"
    android:padding="5dp"
    android:gravity="center_horizontal"
    tools:context=".postfixToOther">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/postfix_to_other_button"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/postfix"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"/>
                <EditText
                    android:id="@+id/postfix_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"
                    android:hint="@string/postfix_input"
                    android:gravity="center_horizontal"
                    android:textCursorDrawable="@null"
                    android:inputType="text"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"
                    android:digits="0123456789QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuioplkjhgfdsazxcvbnm()+-*/^$%"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:autofillHints="no" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/button_convert"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="@string/convert_button"
                        android:textAllCaps="false"
                        android:background="@drawable/button_1"
                        android:textColor="#ffffff"
                        android:textSize="27sp"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:layout_marginEnd="20dp"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:id="@+id/button_reset"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="@string/reset_button"
                        android:background="@drawable/button_1"
                        android:padding="10dp"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prefix"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/prefix_output"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:padding="5dp"
                    android:text="@string/dot_line"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:ignore="DuplicateSpeakableTextCheck" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/step_by_step_solution"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:visibility="gone"
                    android:background="@drawable/button_2"
                    tools:ignore="ButtonStyle"
                    android:textAllCaps="false"
                    android:layout_marginBottom="15dp"
                    android:padding="5dp"
                    android:id="@+id/prefix_sbss"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infix"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"/>
                <TextView
                    android:id="@+id/infix_output"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dot_line"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textIsSelectable="true"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/step_by_step_solution"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:visibility="gone"
                    android:background="@drawable/button_2"
                    tools:ignore="ButtonStyle"
                    android:textAllCaps="false"
                    android:padding="5dp"
                    android:id="@+id/infix_sbss"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>